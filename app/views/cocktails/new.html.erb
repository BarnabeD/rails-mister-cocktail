<div class="navbar-lewagon">
  <h1 class="display-5"><strong>Ajouter un nouveau cocktail !</strong></h1>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="form">
         <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, label: 'Nom du cocktail', placeholder: 'Mojito..'%>
      <!-- </div> -->
      <!-- <div class="img-form"> -->
        <%= render partial: "image_field", :locals => {:f => f}, class: "img-form" %>
      <!-- </div> -->
      <!-- <div class="d-flex justify-content-between mt-3"> -->
          <%= f.button :submit, "Creer le cocktail", class: "flex-item btn-primary" %>
        <% end %>
        <%= button_to 'Annuler', root_path, method: :get, type: "button", class: "flex-item btn btn-info" %>
      </div>
    </div>
  </div>
</div>
